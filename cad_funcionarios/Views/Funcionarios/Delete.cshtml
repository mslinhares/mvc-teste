@model cad_funcionarios.Models.Funcionario

@{
    ViewData["Title"] = "Deletar";
}

<h3 class="m-2">Clique em deletar para excluir o funcionário abaixo</h3>
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataNascimento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataNascimento)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Salario)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Salario)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Atividades)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Atividades)
        </dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Deletar" class="btn btn-danger mt-2" />
        <a class="btn btn-warning mt-2" asp-action="Index">Cancelar</a>
    </form>
</div>
